                     <div type="cjh-ZitatGriech">
                        <p>
                           <seg type="belegstelle">
                              <w>Virt</w>
                              <w>180</w>
                           </seg>
                           <w>τὸ</w>
                           <w>μὲν</w>
                           <w>οὖν</w>
                           <w>πρῶτον</w>
                           <w>καὶ</w>
                           <w>ἀναγκαιότατον</w>
                           <w>τῶν</w>
                           <w>εἰς</w>
                           <w>μετάνοιαν</w>
                           <w>εἴρηται</w>. <w>μετανοείτω</w>
                           <w>δέ</w>
                           <w>τις</w>
                           <w>μὴ</w>
                           <w>μόνον</w>
                           <w>ἐφ᾽οἷς</w>
                           <w>ἠπατήθη</w>
                           <w>πολὺν</w>
                           <w>χρόνον</w>
                           <w>τὰ</w>
                           <w>γενητὰ</w>
                           <w>πρὸ</w>
                           <w>τοῦ</w>
                           <w>ἀγενήτου</w>
                           <w>καὶ</w>
                           <w>ποιητοῦ</w>
                           <w>θαυμάσας</w>, <w>ἀλλὰ</w>
                           <w>καὶ</w>
                           <w>ἐν</w>
                           <w>τοῖς</w>
                           <w>ἄλλοις</w>
                           <w>ὅσα</w>
                           <w>περὶ</w>
                           <w>βίον</w>
                           <w>ἀναγκαῖα</w>, <w>μετιὼν</w>
                           <w>ὥσπερ</w>
                           <w>ἐκ</w>
                           <w>τῆς</w>
                           <w>φαυλοτάτης</w>
                           <w>τῶν</w>
                           <w>κακοπολιτειῶν</w>, <w>ὀχλοκρατίας</w>, <w>εἰς</w>
                           <w>τὴν</w>
                           <w>εὐνομωτάτην</w>
                           <w>πολιτείαν</w>, <w>δημοκρατίαν</w>, <w>τοῦτο</w>
                           <w>δ᾽ἐστὶν</w>
                           <w>ἐξ</w>
                           <w>ἀμαθίας</w>
                           <w>εἰς</w>
                           <w>ἐπιστήμην</w>
                           <w>ὧν</w>
                           <w>ἡ</w>
                           <w>ἄγνοια</w>
                           <w>αἰσχρόν</w>, <w>ἐξ</w>
                           <w>ἀφροσύνης</w>
                           <w>εἰς</w>
                           <w>φρόνησιν</w>, <w>ἐξ</w>
                           <w>ἀκρατείας</w>
                           <w>εἰς</w>
                           <w>ἐγκράτειαν</w>, <w>ἐξ</w>
                           <w>ἀδικίας</w>
                           <w>εἰς</w>
                           <w>δικαιοσύνην</w>, <w>ἐξ</w>
                           <w>ἀτολμίας</w>
                           <w>εἰς</w>
                           <w>θαρραλεότητα</w>.</p>
                     </div>
                     <div type="cjh-ZitatÜbersetzung">
                        <p>
                           <w>Nun</w>
                           <w>wurde</w>
                           <w>das</w>
                           <w>Erste</w>
                           <w>und</w>
                           <w>Notwendigste</w>
                           <w>dieser</w> (<w>Dinge</w>) <w>in</w>
                           <w>der</w>
                           <w>Buße</w>
                           <w>gesagt</w>. <w>Einer</w>
                           <w>soll</w>
                           <w>aber</w>
                           <w>nicht</w>
                           <w>nur</w>
                           <w>in</w>
                           <w>diesen</w>
                           <w>Dingen</w>, <w>in</w>
                           <w>denen</w>
                           <w>er</w>
                           <w>lange</w>
                           <w>Zeit</w>
                           <w>getäuscht</w>
                           <w>wurde</w>, <w>seinen</w>
                           <w>Sinn</w>
                           <w>ändern</w>, <w>weil</w>
                           <w>er</w>
                           <w>die</w>
                           <w>geschaffenen</w>
                           <w>Dinge</w>
                           <w>mehr</w>
                           <w>bewunderte</w>
                           <w>als</w>
                           <w>den</w>
                           <w>ungeborenen</w>
                           <w>Schöpfer</w>, <w>sondern</w>
                           <w>auch</w>
                           <w>bei</w>
                           <w>allen</w>
                           <w>anderen</w>, <w>so</w>
                           <w>weit</w>
                           <w>sie</w>
                           <w>für</w>
                           <w>das</w>
                           <w>Leben</w>
                           <w>notwendig</w>
                           <w>sind</w>; <w>gleichsam</w>
                           <w>soll</w>
                           <w>er</w>
                           <w>aus</w>
                           <w>der</w>
                           <w>schlechtesten</w>
                           <w>der</w>
                           <w>schlechten</w>
                           <w>Staatsverfassungen</w>, <w>der</w>
                           <w>Ochlokratie</w>, <w>zu</w>
                           <w>der</w>
                           <w>mit</w>
                           <w>besten</w>
                           <w>Gesetzen</w>
                           <w>versehenen</w>
                           <w>Staatsverwaltung</w>, <w>der</w>
                           <w>Demokratie</w>, <w>übergehen</w>, <w>dies</w>
                           <w>aber</w>
                           <w>bedeutet</w>
                           <w>von</w>
                           <w>der</w>
                           <w>Unkenntnis</w>
                           <w>zur</w>
                           <w>Kenntnis</w>
                           <w>dieser</w>
                           <w>Dinge</w>, <w>deren</w>
                           <w>Unkenntnis</w>
                           <w>schändlich</w>
                           <w>ist</w>, <w>von</w>
                           <w>dem</w>
                           <w>Unverstand</w>
                           <w>zum</w>
                           <w>Verstand</w>, <w>von</w>
                           <w>der</w>
                           <w>Unmäßigkeit</w>
                           <w>zur</w>
                           <w>Enthaltsamkeit</w>, <w>von</w>
                           <w>der</w>
                           <w>Ungerechtigkeit</w>
                           <w>zur</w>
                           <w>Gerechtigkeit</w>, <w>von</w>
                           <w>der</w>
                           <w>Feigheit</w>
                           <w>zur</w>
                           <w>Zuversicht</w>.</p>
                     </div>
                  </div>
