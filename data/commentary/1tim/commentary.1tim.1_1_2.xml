         <div type="commentary" n="urn:cts:cjhnt:commentary.1tim.1_1_2">
            <div source="urn:cts:cjhnt:nt.75-1Ti.grc001;1.1;" n="2">
               <head type="cjh-Überschrift-1">I. Präskript (1,1–2)</head>
               <head type="cjh-Überschrift-2">1,1/2 Der Messias als ἐλπίς</head>
               <div type="sectionΑ"/>
               <div type="sectionB">
                  <p>
                     <seg type="beleg-section"
                          n="Biblische Pseudepigraphen und anonyme Schriften">
                        <w>|7|</w>
                     </seg>
                     <seg type="belegstelle">
                        <w>1Hen</w>
                        <w>48</w>,<w>4</w>
                     </seg>
                  </p>
               </div>
               <div type="sectionC">
                  <p>
                     <w>Der</w>
                     <w>einzige</w>
                     <w>bekannte</w>
                     <w>Beleg</w>
                     <w>für</w>
                     <w>die</w>
                     <w>Titulierung</w>
                     <w>des</w>
                     <w>Menschensohns</w>
                     <w>als</w> „<w>Hoffnung</w>“ <w>findet</w>
                     <w>sich</w>
                     <w>im</w>
                     <w>1Hen</w>.</p>
               </div>
               <div type="sectionD">
                  <div type="beleg-gruppe">
                     <head type="cjh-Überschrift-3">
                        <w>Der</w>
                        <w>Menschensohn</w>
                        <w>als</w>
                        <w>Hoffnung</w>
                        <w>für</w>
                        <w>Welt</w>
                     </head>
                     <div type="cjh-PetitTexteinl.A">
                        <p>
                           <seg type="belegstelle">
                              <w>1Hen</w>
                              <w>48</w>,<w>4</w>
                           </seg>
                           <w>Der</w>
                           <w>Menschensohn</w>
                           <w>wird</w>
                           <w>in</w>
                           <w>1Hen 48</w>,<w>4</w>
                           <w>als</w>
                           <w>messianische</w>
                           <w>Gestalt</w>
                           <w>und</w>
                           <w>als</w>
                           <w>Hoffnung</w>
                           <w>für</w>
                           <w>die</w>
                           <w>Welt</w>
                           <w>präsentiert</w>.</p>
                     </div>
                     <div type="cjh-ZitatEthiopisch">
                        <p>
                           <w>ውእቱ</w> ፡ <w>ይከውን</w> ፡ <w>በትረ</w> ፡ <w>ለጻድቃን</w> ፡ <w>ከመ</w> ፡ <w>ቦቱ</w> ፡ <w>ይትመርጐዙ</w> ፡ <w>ወኢይደቁ</w> ። <w>ወውእቱ</w> ፡ <w>ብርሃነ</w> ፡ <w>አሕዛብ</w> ፡ <w>ወውእቱ</w> ፡ <w>ይከውን</w> ፡ <w>ተስፋ</w> ፡ <w>ለእለ</w> ፡ <w>የሐሙ</w> ፡ <w>በልቦሙ</w> ።</p>
                     </div>
                     <div type="cjh-ZitatÜbersetzung">
                        <p>
                           <w>Und</w>
                           <w>er</w>
                           <w>wird</w>
                           <w>für</w>
                           <w>die</w>
                           <w>Gerechten</w>
                           <w>ein</w>
                           <w>Stab</w>
                           <w>sein</w>, <w>damit</w>
                           <w>sie</w>
                           <w>sich</w>
                           <w>auf</w>
                           <w>ihn</w>
                           <w>stützen</w>
                           <w>und</w>
                           <w>nicht</w>
                           <w>fallen</w>, <w>und</w>
                           <w>er</w>
                           <w>wird</w>
                           <w>das</w>
                           <w>Licht</w>
                           <w>der</w>
                           <w>Völker</w>
                           <w>und</w>
                           <w>die</w>
                           <w>Hoffnung</w>
                           <w>derer</w>
                           <w>sein</w>, <w>die</w>
                           <w>in</w>
                           <w>ihrem</w>
                           <w>Herzen</w>
                           <w>Kummer</w>
                           <w>haben</w>.</p>
                     </div>
                  </div>
               </div>
               <div type="sectionE">
                  <p>
                     <w>Aufgrund</w>
                     <w>der</w>
                     <w>Parallele</w>
                     <w>im</w>
                     <w>1Hen</w>
                     <w>lässt</w>
                     <w>sich</w>
                     <w>zum</w>
                     <w>einen</w>
                     <w>weder</w>
                     <w>behaupten</w>, <w>die</w>
                     <w>Gleichsetzung</w>
                     <w>von</w>
                     <w>Hoffnung</w>
                     <w>und</w>
                     <w>dem</w>
                     <w>Messias/dem</w>
                     <w>Menschensohn</w>
                     <w>sei</w>
                     <w>ein</w>
                     <w>Unikum</w>. <w>Zum</w>
                     <w>anderen</w>
                     <w>macht</w>
                     <w>sie</w>
                     <w>deutlich</w>, <w>dass</w>
                     <w>die</w>
                     <w>für</w>
                     <w>das</w>
                     <w>christl</w>. <w>Selbstverständnis</w>
                     <w>naheliegende</w>
                     <w>Identifikation</w>
                     <w>alles</w>
                     <w>andere</w>
                     <w>als</w>
                     <w>die</w>
                     <w>Regel</w>
                     <w>ist</w>.</p>
               </div>
            </div>
         </div>
